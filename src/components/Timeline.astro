---
import TimelineEvent from "./TimelineEvent.astro";
import formationEvents from "../data/formation-timeline.data";
---

<ol class="relative w-auto border-s border-gray-200 dark:border-gray-700 mx-5">
  {
    formationEvents
      .sort((a, b) => a.position - b.position)
      .map(({ title, current, description, date, entity, icon: Icon }) => (
        <TimelineEvent
          title={title}
          current={current}
          description={description}
          date={date}
          entity={entity}
        >
          <Icon />
        </TimelineEvent>
      ))
  }
</ol>
