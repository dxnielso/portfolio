---
import { Image } from "astro:assets";
// import type IProject from "../interfaces/IProject";
// import ImageProject from "../assets/spiderman.jpg";
// import WoobleCardComponent from "../components/acertinity/WobbleCardComponent";
import ThreeDCarsComponent from "@/components/acertinity/ThreeDCarsComponent";
import type IProject from "@/interfaces/project.interface";
import Tag from "./Tag.astro";

interface Props {
  project: IProject;
}

const { id, title, description, image, link, github, tags } =
  Astro.props.project;
---

<ThreeDCarsComponent
  client:idle
  className="flex flex-col lg:flex-row items-start gap-x-5 overflow-hidden lg:min-h-fit rounded-md hover:bg-slate-50/5 [border-width:0.1px] border-transparent hover:border-white/10 duration-75 group"
>
  <div
    class="lg:pl-5 lg:py-4 lg:w-4/12 z-10 h-full overflow-hidden w-full mb-4 lg:mb-0"
  >
    <Image
      src={image}
      alt=`Image of ${title}`
      class="bg-cover bg-no-repeat rounded-md"
    />
  </div>
  <div class="lg:pr-5 lg:py-4 lg:w-8/12 z-10 w-full">
    <h3
      class="font-semibold font-azeret lg:text-lg w-fit text-slate-100 text-2xl"
    >
      {title}
    </h3>
    <p class="font-light lg:text-sm text-base mb-3 text-[#c5c5c5]">
      {description}
    </p>
    <ul class="flex gap-x-4 gap-y-2 flex-wrap mb-5">
      {tags.map((tag) => <Tag text={tag.name} />)}
    </ul>
    <div class="flex gap-x-5">
      <a href={github} class="lg:size-6 size-9" target="_blank"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-brand-github w-full h-full duration-100 stroke-white opacity-70 hover:opacity-100 stroke-[1.5]"
          viewBox="0 0 24 24"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path>
        </svg></a
      >
      <a href={link} class="lg:size-6 size-9" target="_blank"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          class="feather feather-external-link w-full h-full duration-100 stroke-white opacity-70 hover:opacity-100 stroke-[1.5]"
          viewBox="0 0 24 24"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path><polyline points="15 3 21 3 21 9"></polyline><line
            x1="10"
            y1="14"
            x2="21"
            y2="3"></line></svg
        ></a
      >
    </div>
  </div>
</ThreeDCarsComponent>
